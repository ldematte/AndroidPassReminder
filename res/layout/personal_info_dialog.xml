<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <LinearLayout
            android:padding="2pt"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <TextView
                android:textSize="10pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_label_ticket"
                android:text="@string/ticket"/>

        <TextView
                android:textSize="7pt"
                android:layout_marginBottom="2pt"
                android:id="@+id/dialog_txtTicket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <View
                android:layout_width="fill_parent"
                android:layout_height="1pt"
                android:layout_marginTop="5pt"
                android:id="@+id/hLine"
                android:layout_marginBottom="5pt"/>

        <TextView
                android:textSize="10pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_label_name"
                android:text="@string/name"/>

        <TextView
                android:textSize="7pt"
                android:layout_marginBottom="2pt"
                android:id="@+id/dialog_txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:textSize="10pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_label_codfisc"
                android:text="@string/codfisc"/>

        <TextView
                android:textSize="7pt"
                android:layout_marginBottom="2pt"
                android:id="@+id/dialog_txtCodFisc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:textSize="10pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_label_email"
                android:text="@string/email"/>

        <TextView
                android:textSize="7pt"
                android:layout_marginBottom="2pt"
                android:id="@+id/dialog_txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:textSize="10pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_label_phone"
                android:text="@string/phone"/>

        <TextView
                android:textSize="7pt"
                android:layout_marginBottom="2pt"
                android:id="@+id/dialog_txtPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:textSize="10pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_label_mobile"
                android:text="@string/mobile"/>

        <TextView
                android:textSize="7pt"
                android:layout_marginBottom="2pt"
                android:id="@+id/dialog_txtMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:textSize="10pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_label_fax"
                android:text="@string/fax"/>

        <TextView
                android:textSize="7pt"
                android:layout_marginBottom="2pt"
                android:id="@+id/dialog_txtFax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        <TextView
                android:textSize="10pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_label_street"
                android:text="@string/street"/>

        <TextView
                android:textSize="7pt"
                android:layout_marginBottom="2pt"
                android:id="@+id/dialog_txtStreet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:textSize="10pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_label_location"
                android:text="@string/location"/>

        <TextView
                android:textSize="7pt"
                android:layout_marginBottom="2pt"
                android:id="@+id/dialog_txtLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:textSize="10pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_label_town"
                android:text="@string/town"/>

        <TextView
                android:textSize="7pt"
                android:layout_marginBottom="2pt"
                android:id="@+id/dialog_txtTown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:textSize="10pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_label_district"
                android:text="@string/district"/>

        <TextView
                android:textSize="7pt"
                android:layout_marginBottom="2pt"
                android:id="@+id/dialog_txtDistrict"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:textSize="10pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_label_zip"
                android:text="@string/zip"/>

        <TextView
                android:textSize="7pt"
                android:layout_marginBottom="2pt"
                android:id="@+id/dialog_txtZip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:textSize="10pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_label_country"
                android:text="@string/country"/>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                    android:src="@drawable/flag_of_european_union"
                    android:id="@+id/dialog_imgFlag"
                    android:layout_width="14pt"
                    android:layout_height="14pt"
                    android:visibility="gone"/>

            <TextView
                    android:textSize="7pt"
                    android:paddingTop="3pt"
                    android:paddingBottom="4pt"
                    android:layout_marginBottom="2pt"
                    android:id="@+id/dialog_txtCountry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>